{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DN42 Global Configuration Schema",
  "type": "object",
  "required": ["dn42_asn", "wg_defaults"],
  "properties": {
    "dn42_asn": {
      "type": "integer",
      "minimum": 4200000000,
      "maximum": 4299999999,
      "description": "DN42 ASN (must be in DN42 range)"
    },
    "wg_defaults": {
      "type": "object",
      "required": ["table", "persistent_keepalive", "allowed_ips"],
      "properties": {
        "table": {
          "type": "string",
          "enum": ["off", "auto"],
          "description": "WireGuard routing table setting"
        },
        "persistent_keepalive": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535,
          "description": "Keepalive interval in seconds"
        },
        "allowed_ips": {
          "type": "string",
          "description": "Allowed IPs for WireGuard peers"
        }
      }
    },
    "bgp_community_lists": {
      "type": "array",
      "description": "BGP community lists",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Community list name"
          },
          "seq": {
            "type": "integer",
            "description": "Sequence number (optional)"
          },
          "type": {
            "type": "string",
            "enum": ["standard", "expanded"],
            "description": "Community list type (optional, defaults based on seq presence)"
          },
          "value": {
            "type": "string",
            "description": "Community value"
          }
        }
      }
    },
    "bgp_large_community_lists": {
      "type": "array",
      "description": "BGP large community lists",
      "items": {
        "type": "object",
        "required": ["name", "seq", "value"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Large community list name"
          },
          "seq": {
            "type": "integer",
            "description": "Sequence number"
          },
          "value": {
            "type": "string",
            "pattern": "^[0-9]+:[0-9]+:.*$",
            "description": "Large community value (ASN:function:parameter)"
          }
        }
      }
    },
    "bgp_as_path_acls": {
      "type": "array",
      "description": "BGP AS path access lists",
      "items": {
        "type": "object",
        "required": ["name", "seq", "value"],
        "properties": {
          "name": {
            "type": "string"
          },
          "seq": {
            "type": "integer"
          },
          "value": {
            "type": "string",
            "description": "Regex pattern for AS path"
          }
        }
      }
    },
    "ip_prefix_lists": {
      "type": "array",
      "description": "IPv4 prefix lists",
      "items": {
        "type": "object",
        "required": ["name", "seq", "action", "prefix"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Prefix list name"
          },
          "seq": {
            "type": "integer",
            "description": "Sequence number"
          },
          "action": {
            "type": "string",
            "enum": ["permit", "deny"],
            "description": "Action to take (permit or deny)"
          },
          "prefix": {
            "type": "string",
            "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
            "description": "IPv4 prefix in CIDR notation"
          },
          "ge": {
            "type": "integer",
            "minimum": 0,
            "maximum": 32,
            "description": "Minimum prefix length to match (greater than or equal)"
          },
          "le": {
            "type": "integer",
            "minimum": 0,
            "maximum": 32,
            "description": "Maximum prefix length to match (less than or equal)"
          }
        }
      }
    },
    "ipv6_prefix_lists": {
      "type": "array",
      "description": "IPv6 prefix lists",
      "items": {
        "type": "object",
        "required": ["name", "seq", "action", "prefix"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Prefix list name"
          },
          "seq": {
            "type": "integer",
            "description": "Sequence number"
          },
          "action": {
            "type": "string",
            "enum": ["permit", "deny"],
            "description": "Action to take (permit or deny)"
          },
          "prefix": {
            "type": "string",
            "description": "IPv6 prefix in CIDR notation"
          },
          "ge": {
            "type": "integer",
            "minimum": 0,
            "maximum": 128,
            "description": "Minimum prefix length to match (greater than or equal)"
          },
          "le": {
            "type": "integer",
            "minimum": 0,
            "maximum": 128,
            "description": "Maximum prefix length to match (less than or equal)"
          }
        }
      }
    },
    "ibgp_enabled": {
      "type": "boolean",
      "description": "Enable iBGP full mesh between all routers"
    },
    "ibgp_config": {
      "type": "object",
      "description": "iBGP configuration parameters",
      "properties": {
        "timers": {
          "type": "object",
          "description": "iBGP keepalive and holdtime timers",
          "properties": {
            "keepalive": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Keepalive interval in seconds (default: 60)"
            },
            "holdtime": {
              "type": "integer",
              "minimum": 3,
              "maximum": 65535,
              "description": "Holdtime in seconds (default: 180, must be >= 3x keepalive)"
            }
          }
        },
        "route_reflector_enabled": {
          "type": "boolean",
          "description": "Enable route reflection for hierarchical design (default: false)"
        },
        "bfd_enabled": {
          "type": "boolean",
          "description": "Enable BFD for fast failure detection (default: false)"
        }
      }
    },
    "ibgp_mesh": {
      "type": "array",
      "description": "List of router hostnames participating in iBGP full mesh. Loopback addresses are pulled from host_vars.",
      "items": {
        "type": "string",
        "description": "Router hostname (must match inventory hostname)"
      }
    },
    "isis_enabled": {
      "type": "boolean",
      "description": "Enable IS-IS routing protocol"
    },
    "isis_config": {
      "type": "object",
      "description": "IS-IS configuration parameters",
      "properties": {
        "area_id": {
          "type": "string",
          "pattern": "^[0-9]{2}$",
          "description": "IS-IS area ID (default: 49)"
        },
        "is_type": {
          "type": "string",
          "enum": ["level-1", "level-2-only", "level-1-2"],
          "description": "IS-IS router level (default: level-2-only)"
        },
        "metric_style": {
          "type": "string",
          "enum": ["narrow", "wide", "transition"],
          "description": "IS-IS metric style (default: wide)"
        },
        "circuit_type": {
          "type": "string",
          "enum": ["level-1", "level-2-only", "level-1-2"],
          "description": "Circuit type for P2P links (default: level-2-only)"
        }
      }
    },
    "segment_routing_enabled": {
      "type": "boolean",
      "description": "Enable Segment Routing (SR-MPLS)"
    },
    "segment_routing_config": {
      "type": "object",
      "description": "Segment Routing configuration parameters",
      "properties": {
        "srgb_start": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1048575,
          "description": "SRGB start label (MUST be identical on all routers, default: 16000)"
        },
        "srgb_end": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1048575,
          "description": "SRGB end label (MUST be identical on all routers, default: 23999)"
        },
        "node_msd": {
          "type": "integer",
          "minimum": 1,
          "maximum": 32,
          "description": "Maximum SID Depth - max labels in MPLS stack (default: 8)"
        },
        "explicit_null": {
          "type": "boolean",
          "description": "Use explicit-null labels for better traceroute (default: true)"
        },
        "index_method": {
          "type": "string",
          "enum": ["last_octet", "manual"],
          "description": "Prefix SID index calculation method. 'last_octet': use last octet of loopback (e.g., .161 → index 161 → label srgb_start+161). 'manual': use segment_routing_index from host_vars. (default: last_octet)"
        }
      }
    },
    "intra_network_tunnels": {
      "type": "array",
      "description": "Intra-network GRE tunnels for iBGP + OSPF + MPLS/LDP. GRE is required because WireGuard cannot carry MPLS labels (no L2 header).",
      "items": {
        "type": "object",
        "required": ["routers"],
        "properties": {
          "routers": {
            "type": "array",
            "description": "Pair of routers to connect",
            "minItems": 2,
            "maxItems": 2,
            "items": {
              "type": "string",
              "description": "Router hostname"
            }
          },
          "ospf_cost": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535,
            "description": "OSPF interface cost. Use average RTT latency in milliseconds for latency-based routing."
          },
          "mtu": {
            "type": "integer",
            "minimum": 576,
            "maximum": 9000,
            "default": 1400,
            "description": "GRE tunnel MTU. Default 1400 allows headroom for MPLS labels over typical 1500-byte Internet MTU."
          },
          "encryption": {
            "type": "string",
            "enum": ["none", "gre_key"],
            "description": "Encryption/authentication method. 'gre_key' adds a 32-bit key to GRE header for basic authentication."
          },
          "gre_key": {
            "oneOf": [
              {
                "type": "integer",
                "minimum": 0,
                "maximum": 4294967295
              },
              {
                "type": "string",
                "pattern": "^\\{\\{.*\\}\\}$",
                "description": "Jinja2 template reference to vault variable"
              }
            ],
            "description": "32-bit GRE key for tunnel authentication. Can be an integer or a Jinja2 reference to a vault variable (e.g., '{{ vault_gre_key }}')."
          }
        }
      }
    },
    "static_routes": {
      "type": "array",
      "description": "Static routes configuration",
      "items": {
        "type": "object",
        "required": ["destination", "nexthop"],
        "properties": {
          "destination": {
            "type": "string",
            "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
            "description": "Destination network in CIDR notation"
          },
          "nexthop": {
            "type": "string",
            "description": "Next-hop IP address, interface name (e.g., Null0), or gateway IP"
          },
          "description": {
            "type": "string",
            "description": "Optional description for this static route"
          }
        }
      }
    },
    "route_maps": {
      "type": "array",
      "description": "BGP route-map definitions (non-peer specific)",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Route-map name"
          },
          "seq": {
            "type": "integer",
            "description": "Sequence number (for simple route-maps)"
          },
          "action": {
            "type": "string",
            "enum": ["permit", "deny"],
            "description": "Action to take (for simple route-maps)"
          },
          "set_community": {
            "type": "string",
            "description": "BGP community values to set"
          },
          "set_large_community": {
            "type": "string",
            "description": "BGP large community value to set (supports Jinja2 variables)"
          },
          "entries": {
            "type": "array",
            "description": "Multiple route-map entries (for complex route-maps)",
            "items": {
              "type": "object",
              "required": ["seq", "action"],
              "properties": {
                "seq": {
                  "type": "integer",
                  "description": "Sequence number"
                },
                "action": {
                  "type": "string",
                  "enum": ["permit", "deny"],
                  "description": "Action to take"
                },
                "match_prefix_list": {
                  "type": "string",
                  "description": "IPv4 prefix-list to match"
                },
                "match_ipv6_prefix_list": {
                  "type": "string",
                  "description": "IPv6 prefix-list to match"
                },
                "match_large_community": {
                  "type": "string",
                  "description": "Large community list to match"
                }
              }
            }
          }
        }
      }
    }
  }
}
